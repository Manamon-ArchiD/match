{
  "name": "match-service",
  "version": "1.0.0",
  "description": "IMT A1 - Micro services architecture",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "npm run serve",
    "serve": "node -r dotenv/config dist/app.js",
    "build": "npm run clean && npm run build-ts",
    "build-ts": "tsc",
    "watch": "npx concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon -r dotenv/config dist/app.js",
    "watch-ts": "tsc -w",
    "clean": "rimraf ./dist",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/app.js\"",
    "generate-docs": "npm run build && node scripts/generate-swagger.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mikro-orm/cli": "^6.4.3",
    "@mikro-orm/core": "^6.4.3",
    "@mikro-orm/postgresql": "^6.4.3",
    "@mikro-orm/reflection": "^6.4.3",
    "@mikro-orm/seeder": "^6.4.3",
    "@mikro-orm/sqlite": "^6.4.3",
    "@types/node": "^22.10.7",
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "match-service": "file:",
    "node-cron": "^3.0.3",
    "rimraf": "^6.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "reflect-metadata": "^0.2.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5"
  }
}
