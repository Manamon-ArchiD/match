{
    "compilerOptions": {
        "baseUrl": ".",
        "resolveJsonModule": true,
        "target": "ESNext",
        "strict": true,
        "outDir": "dist",
        "module": "CommonJS",
        "declaration": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "esModuleInterop": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"],
    "exclude": [
        "node_modules/",
        "tests/",
        "dist/"
    ],
    // "ts-node": {
    //     "esm": true,
    //     "transpileOnly": true
    // }
}